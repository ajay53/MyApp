<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Calender"
        android:textColor="@color/white" />

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calender_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="out_of_range"
        app:mcv_dateTextAppearance="@style/MyCalenderView"
        app:mcv_arrowColor="@android:color/transparent"
        app:mcv_leftArrowMask="@drawable/calendar_back_arrow_selector"
        app:mcv_rightArrowMask="@drawable/calendar_next_arrow_selector"
        app:mcv_weekDayTextAppearance="@style/MyCalenderView"
        app:mcv_headerTextAppearance="@style/MyCalenderView"
        app:mcv_selectionColor="@color/button_color" />
</androidx.appcompat.widget.LinearLayoutCompat>