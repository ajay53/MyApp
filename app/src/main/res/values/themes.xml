<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkoutManager" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_color</item>
        <item name="colorPrimaryVariant">@color/bg_color</item>
        <item name="colorOnPrimary">@color/card_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/white</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!-- Customize your theme here. -->
        <!--        <item name="popupMenuStyle">@style/MyPopupMenu</item>-->
        <!--        <item name="buttonStyle">@style/MyButton</item>-->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarButtonStyle">@style/MySnackBarButton</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarText</item>
        <!--        <item name="floatingActionButtonStyle">@style/MyFloatingActionButton</item>-->
        <!--        <item name="extendedFloatingActionButtonStyle">@style/MyExtendedFloatingActionButton</item>-->
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:colorBackground">@color/bg_color</item>
    </style>

    <style name="MyButton" parent="@style/Widget.AppCompat.Button">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:height">60dp</item>
        <item name="android:width">150dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="MyBottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:selectableItemBackground">@color/grey_dark</item>
        <item name="itemBackground">@color/card_color</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
    </style>

    <style name="MySnackBarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/inner_card_color</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MySnackBarButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:font">@font/montserrat_regular</item>
    </style>

    <style name="MySnackBarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:font">@font/montserrat_regular</item>
    </style>
    <!--<style name="MyFloatingActionButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="MyExtendedFloatingActionButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="elevation">0dp</item>
    </style>-->
</resources>